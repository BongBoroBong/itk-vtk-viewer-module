{
  "extends": "./config/tsconfig.extend.json",
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "esnext", "dom.iterable"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["node"]
  },
  "include": ["src/**/*", "types", "@types"],
  "exclude": ["node_modules", "build"]
}
